<ruleset name="WordPress">

	<config name="installed_paths" value="vendor/wp-coding-standards/wpcs,vendor/wimg/php-compatibility" />

	<description>WordPress</description>

	<!-- Run against the WordPress ruleset -->
	<rule ref="WordPress" />

	<!-- Run against the PHPCompatibility ruleset -->
	<rule ref="PHPCompatibility"/>

	<!-- Check PHPCompatibility rules for cross-version support for PHP 5.6 and higher. -->
	<config name="testVersion" value="5.6-"/>

	<exclude-pattern>index.php</exclude-pattern>

</ruleset>
